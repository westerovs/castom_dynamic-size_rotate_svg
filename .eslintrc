{
    "root": true,
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "airbnb"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        // 0 - off, 1 - warn, 2 - error
        "no-await-in-loop": "error",
        "no-console": "error",
        "comma-dangle": "off",
        "indent": [
            "error",
            4
        ],
        "quotes": [
            "warn",
            "single",
            {
                "allowTemplateLiterals": true
            }
        ],
        "react/prop-types": 0,
        "react/jsx-indent": 0,
        "react/jsx-indent-props": [
            2,
            4
        ],
        "jsx-a11y/click-events-have-key-events": 0,
        "jsx-a11y/no-noninteractive-element-interactions": 0,
        "jsx-a11y/media-has-caption": 0,
        "import/no-extraneous-dependencies": 0,
        "no-plusplus": "off",
        "default-case": "off",
        "linebreak-style": "off",
        "no-multiple-empty-lines": [
            "error", { "max": 2, "maxEOF": 0
        }]
    }
}
